@model IEnumerable<Manage_Coffee.Models.NguyenVatLieu>
@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
<h1> Danh sách Nguyên Vật Liệu</h1>



<div class="addnvl">
    @Html.ActionLink("Thêm Nguyên Vật Liệu Mới", "Create", "QuanLy", new { area = "Admin" }, new { @class = "tadda" })
</div>



<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã NVL</th>
            <th>Tên</th>
            <th>Đơn Giá</th>
            <th>Số Lượng </th>
            <th>Đơn Vị Tính</th>
            <th>Ảnh</th>
            <th>Mô Tả</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNvl</td>
                <td>@item.Ten</td>
                <td>@item.Dongia</td>
                <td>@item.SoLuong</td>
                <td>@item.Dvt</td>
                <td><img src="~/css/img/@item.Anh" alt="Ảnh" width="100" /></td>
                <td>@item.Mota</td>
            </tr>
        }
    </tbody>
</table>

