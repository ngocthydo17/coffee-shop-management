@model IEnumerable<Manage_Coffee.Models.PhieuNhapXuat>
@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
<h1>Danh sách Phiếu Nhập Xuất</h1>

<div class="themphieu-nvl">
    @Html.ActionLink("Thêm phiếu nhập xuất nguyên vật liệu", "CreateMaterial", "QuanLy", new { area = "Admin" }, new { @class = "tenten" })
</div>

<table>
    <thead>
        <tr>
            <th>Mã phiếu</th>
            <th>Ngày lập</th>
            <th>Loại phiếu</th>
            <th>Địa Chỉ</th>
            <th>Tên nhân viên</th>
            <th>Mã cung cấp</th>
            <th>Xem chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phieu in Model)
        {
            <tr>
                <td>@phieu.MaPhieu</td>
                <td>@phieu.NgayLap.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@phieu.Loai</td>
                <td>@phieu.Diachi</td>
                <td>@phieu.MaNv</td>
                <td>@phieu.MaCcap</td>
                <td>
                    <a href="@Url.Action("ViewPhieuDetail", "QuanLy", new { MaPhieu = phieu.MaPhieu })">Xem Chi Tiết</a>
                </td>
            </tr>
       
        }
    </tbody>
</table>


<style>
    .themphieu-nvl {
        margin-left: 150px;
        margin-bottom: 30px;
    }

    .tenten {
        background-color: #07522E; /* Màu nền của nút */
        color: white; /* Màu chữ */
        padding: 10px 20px; /* Khoảng cách bên trong nút */
        font-size: 16px; /* Kích thước chữ */
        border: none; /* Xóa đường viền mặc định */
        border-radius: 5px; /* Bo góc cho nút */
        text-decoration: none; /* Xóa gạch chân mặc định */
        transition: background-color 0.3s ease; /* Hiệu ứng chuyển đổi khi hover */
    }

        .tenten:hover {
            background-color: #E9DFB8; /* Màu nền khi hover */
            color: #414042; /* Màu chữ khi hover */
        }
    h1 {
        color: #1b7033;
        margin-top: 20px;
        TEXT-ALIGN: center;
    }

    thead tr {
        background-color: #E9DFB8 !important;
    }

    /* Hàng lẻ: 1, 3, 5,... */
    table tr:nth-child(odd) {
        background-color: white;
    }

    /* Hàng chẵn: 2, 4, 6,... */
    table tr:nth-child(even) {
        background-color: #eee;
    }

    table, th, tr, td {
        border: 2px solid;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #868585;
    }

    table {
        margin-bottom: 25px;
        margin-left: 10%;
        width: 85%;
        border-collapse: collapse;
    }

    td {
        height:45px;
        width: 120px;
        text-align: center;
    }

    th {
        height: 50px;
        color: 414042;
    }
</style>