@model IEnumerable<Manage_Coffee.Models.Phieudhonl>
@{

}
<h2>Lịch sử đơn hàng</h2>

<table>
    <thead>
        <tr>
            @* <th>Mã Phiếu Đơn Lẻ</th> *@
            <th>Ngày Giờ Đặt</th>
            <th>Tổng Tiền</th>
            <th>Địa Chỉ</th>
            <th>Trạng Thái</th>
            <th>Phương Thức Thanh Toán</th>
            <th>Tiền Ship</th>
            <th>Chi Tiết</th> 
        </tr>
    </thead>

    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                @* <td>@order.MaPhieuonl</td> *@
                <td>@order.Ngaygiodat.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.TongTien?.ToString("N0")</td>
                <td>@order.DiaChi</td>
                @*  <td>@(order.TrangThai ? "Hoàn Thành" : "Chưa Hoàn Thành")</td> *@
                <td>
                    @if (@order.TrangThai == true)
                    {
                        <p>Hoàn thành</p>
                    }
                    else if (@order.TrangThai == false)
                    {
                        <p>Chờ xác nhận </p>
                    }
                    else
                    {
                        <p>Đã hủy đơn</p>
                    }
                </td>
                <td>@order.Pttt</td>
                <td>@order.TienShip?.ToString("N0")</td>
                <td>
                    <a href="@Url.Action("Detail", "OrderHistory", new { maPhieuonl = order.MaPhieuonl })">Xem Chi Tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Style the table */
    table {
        margin-left: 75px;
        width: 90%;
        border-collapse: collapse;
        font-family: 'Arial', sans-serif;
        margin-bottom: 20px;
        /* text-align: left; */
    }

    thead th {
        width: 5%;
        text-align: center;
        padding: 10px 0 10px 0;
        background-color: #fff;
        font-weight: bold;
        border-bottom: 2px solid #ddd;
    }

    tbody tr {
        border-bottom: 1px solid #ddd;
    }

    td {
        padding: 15px 0 15px 0;
        font-size: 16px;
        text-align: center;
    }

    /* Header title style */
    h2 {
        margin-top: 20px;
        font-size: 40px;
        text-align: center;
        color: #1b7033;
        margin-bottom: 30px;
    }

    /* Styling for the 'Xem chi tiết' link */
    a {
        text-decoration: none;
        color: #1b7033;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Price and Ship Price Alignment */
    td:nth-child(3), /* Total Price */
    td:nth-child(7) { /* Shipping Price */
        text-align: center;
    }

    /* Button and link hover effect */
    tbody tr:hover {
        background-color: #f9f9f9;
    }

</style>