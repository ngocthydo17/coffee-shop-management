@model Manage_Coffee.Models.ResetPasswordModel

@{
    ViewData["Title"] = "ResetPassword";
    <link href="~/css/pass.css" rel="stylesheet" />
}


<div class="container">
    <div class="offset">
        <h1>Đặt lại mật khẩu</h1>
        @if (Model?.IsSuccess == true)
        {
            <div class="alert" role="alert">
                <p>
                    Bạn đã cập nhật mật khẩu thành công.
                </p>
            </div>
        }
        else
        {
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserId" class="form-control" />
                <input type="hidden" asp-for="Token" class="form-control" />
                <div class="form_group">
                    <label asp-for="NewPassword" class="control-label">Mật khẩu mới</label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form_group">
                    <label asp-for="ConfirmNewPassword" class="control-label">Xác nhận mật khẩu mới</label>
                    <input asp-for="ConfirmNewPassword" class="form-control" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                <div class="form_group">
                    <input type="submit" value="Thay đổi mật khẩu" class="btn_pass" />
                </div>
            </form>
        }

    </div>
</div>